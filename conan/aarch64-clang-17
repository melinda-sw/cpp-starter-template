[settings]
os=Linux
arch=armv8
compiler=clang
compiler.cppstd=23
compiler.libcxx=libstdc++11
compiler.version=17

[buildenv]
CC=clang-17
CXX=clang++-17

[conf]
tools.build:cflags+=["--target=aarch64-linux-gnu", "-mcpu=cortex-a76", "-march=armv8-a"]
tools.build:cxxflags+=["--target=aarch64-linux-gnu", "-mcpu=cortex-a76", "-march=armv8-a"]
